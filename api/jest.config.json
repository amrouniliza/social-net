{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "./",
    "roots": [
        "<rootDir>/src"
    ],
    "modulePaths": [
        "<rootDir>"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": ["**/*.(t|j)s"],
    "coverageDirectory": "./coverage",
    "testResultsProcessor": "jest-sonar-reporter",
    "testPathIgnorePatterns": [
      "/node_modules./",
      "<rootDir>/(coverage|dist|lib|tmp)./"
    ]
  }
  